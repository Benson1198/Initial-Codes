

count = 0

C_Pass = "Benson"

while count <= 3:
    count += 1
    password = input("Enter the password: ")
    
    if count == 4:
        break
        
    else:
        pass
    if password == C_Pass :
        print("Access Granted")
        
        break
    else:
        print("Access Denied")
        
    if count == 1 :
        print("2 chances remaining.")
        
    elif count == 2:
        print("Last chance remaining.")
    
    elif count == 3:
        print("Your account has been locked for the day.")
        
        break
    
    else :
        pass
